<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".patientDetails" >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0CCDA3"
            android:text="Details"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_border"
            android:textSize="14sp"
            android:layout_weight="1"
            android:id="@+id/btnDetails"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vital"
            android:textAllCaps="false"
            android:layout_marginEnd="10dp"
            android:textColor="#0CCDA3"
            android:textSize="14sp"
            android:layout_weight="1"
            android:id="@+id/btnVital56"
            android:background="@drawable/button_border"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rhome"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/prof"
            android:layout_width="262dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:src="@drawable/proft" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/txtName"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_marginStart="94dp"
            android:layout_marginLeft="94dp"
            android:text="Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edName"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:text="Hana Anne"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtAge"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_marginStart="94dp"
            android:layout_marginLeft="94dp"
            android:text="Age"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edAge"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:text="25"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtblood"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_marginStart="94dp"
            android:layout_marginLeft="94dp"
            android:text="Blood Group"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edblood"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:text="A+"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtDia"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_marginStart="94dp"
            android:layout_marginLeft="94dp"
            android:text="Diagnosed"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edDia"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:text="Diabetes"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtmed"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_marginStart="94dp"
            android:layout_marginLeft="94dp"
            android:text="Medicine"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edMedicine"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:text="Metformin"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtDoc"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_marginStart="94dp"
            android:layout_marginLeft="94dp"
            android:text="Doctor Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edDocName"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:text="Dr.Neelika Malavige"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtphone"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_marginStart="94dp"
            android:layout_marginLeft="94dp"
            android:text="Phone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ed4ne"
            android:layout_width="190dp"
            android:layout_height="39dp"
            android:text="0777789654"
            />
    </LinearLayout>
</LinearLayout>